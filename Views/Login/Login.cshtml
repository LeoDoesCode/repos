
@model Whiteboard.Models.User

@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <div class="fullscreenDiv">
        <div class="wrapper fadeInDown">
            <div id="formContent">
                <!-- Tabs Titles -->
                <!-- Icon -->
                <h2>Whiteboard</h2>
                <div class="fadeIn first">
                    <img id="userPic" src="~/Resources/user.png" width="80px" />
                </div>
                <!-- Login Form -->
                @using (Html.BeginForm("Verify", "Login", FormMethod.Post))
                {
                    <p>User</p>
                    @Html.TextBoxFor(model => model.Mail, new { @class = "fadeIn second", id = "mail", name = "mail" })
                    <p>Password</p>
                    @Html.TextBoxFor(model => model.Password, new { @class = "fadeIn third", Type = "Password", id = "password", name = "password" })
                    <input type="submit" class="fadeIn fourth" value="Log In">
                    <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
                    <p>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</p>

                    <p><a class="" href="#">Forgot Password?</a></p>
                }
            </div>
        </div>
    </div>
</body>
</html>
